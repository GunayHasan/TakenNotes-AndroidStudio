<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".NoInternetActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/no_internet_anim"
        android:layout_width="308dp"
        android:layout_height="308dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454"
        app:lottie_autoPlay="true"
        app:lottie_fileName="no_connection.json"
        app:lottie_loop="true"/>
    
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/productsansbold"
        android:text="No Internet"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@id/no_internet_anim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <Switch
        android:id="@+id/switcher"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:background="@drawable/card_background"
        android:fontFamily="@font/productsans"
        android:text="Wi-Fi"
        android:textColor="@color/browser_actions_bg_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_internet_anim"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mobil_data"
        android:layout_width="123dp"
        android:layout_height="39dp"
        android:background="@drawable/card_background"
        android:fontFamily="@font/productsans"
        android:text="Mobile Data"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switcher"/>

</androidx.constraintlayout.widget.ConstraintLayout>